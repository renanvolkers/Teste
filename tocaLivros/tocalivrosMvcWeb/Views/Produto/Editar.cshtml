@model tocaLivrosModel.Produto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>



@{
    ViewBag.Title = "Editar Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Editar", "Produto",new {@_id=Model.Id },FormMethod.Post, new { @class = "form-horizontal" }))
{





    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-8">
            <div class="body-content">
                <div class="row">
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-8 proprio">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control input-lg" value="@Model.Nome" required="true" placeholder="Informe seu Nome" name="txtNome" maxlength="30" id="txtNome" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control input-lg" value="@Model.QtdProduto" required="true" placeholder="Informe Quantidade" name="txtQtdProduto" maxlength="11" id="txtQtdProduto" />

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-8">
                                    <div class="form-group">
                                        <input type="text" class="form-control input-lg" required="true" value="@Model.VlrProduto" placeholder="Informe  Valor " name="txtVlrProduto" maxlength="10" id="txtVlrProduto" />

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-8 proprio">
                                    <div class="form-group">
                                        <button class="btn btn-primary btn-lg btn-block" type="submit">Editar Produto</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>

}

<div>
    @Html.ActionLink("Voltar", "ListaProduto")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
