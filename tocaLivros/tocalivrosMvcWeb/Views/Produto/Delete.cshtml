@model tocaLivrosModel.Produto

@{
    ViewBag.Title = "Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Deseja realmente excluir o Produto?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayName("Quantidade")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QtdProduto)
        </dd>

        <dt>
            @Html.DisplayName("Valor")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VlrProduto)
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "ListaProduto")
        </div>
    }
</div>
